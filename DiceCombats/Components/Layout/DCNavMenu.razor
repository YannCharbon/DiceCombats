@inject IStringLocalizer<Resources.Localization.DCNavMenu> Loc

<style>
    nav {
        display: flex;
        height: 50px;
        align-items: center;
        justify-content: center;
        background-color: rgba(10,30,30,1.0);
        position: fixed;
        top: 0;
        width: 100%;
        box-shadow: 0 2px 10px rgba(255, 255, 255, 0.1);
        border-bottom: 1px solid #505050;
        z-index: 10; /* Ensures nav stays above other elements */
    }

    .nav-link {
        text-decoration: none;
        color: #FFFFFF;
        margin: 20px;
        padding: 10px;
        border-radius: 10px;
        background: #101010;
        font-size: large;
        z-index: 1; /* Makes sure links are below the logo if they overlap */
    }

    .nav-link:hover {
        box-shadow: 0 2px 10px rgba(255, 255, 255, 0.3);
        color: grey;
    }

    .nav-logo {
        position: relative;
        z-index: 5; /* Ensures the logo is above the nav links */
    }

        .nav-logo img {
            width: 100px; /* Increase the width to make it more prominent */
            transform: translateY(0px); /* Moves the logo upwards to overflow the navbar */
        }
</style>

<nav>
    <a class="nav-link" style="color:white;" href="creaturesexplorer">@Loc["CreaturesBtn"]</a>
    <div class="nav-logo" style="color:white;"><a href=""><img src="dicecombats_logo.svg" /></a></div>
    <a class="nav-link" style="color:white;" href="combatsexplorer">@Loc["CombatsBtn"]</a>
</nav>





